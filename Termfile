# first:
# `gem install terminitor` # in Gemfile (is Linux ok)?
# `echo "ASTROLIN_PATH=~/<path/to/astrolin>" >> ~/.bash_profile`
# `source ~/.bash_profile`
# later:
# `cd ASTROLIN_PATH && bundle exec terminitor start`

before { run 'cd ASTROLIN_PATH' }

tab :name => "Astro  林 ", :selected => true do
  run "clear"
  run "ls -a"
end

tab :name => "Astro  林 Node.js ", :settings => "Grass" do
  run "node-dev --debug server.js"
end

tab :name => "Astro  林 Node-Inspector ", :settings => "Red Sands" do
  run "node-inspector"
end

tab :name => "Astro  林 LiveReload ", :settings => "Red Sands" do
  run "bundle exec livereload"
end

tab :name => "Astro  林 Guard ", :settings => "Red Sands" do
  run "bundle exec guard --notify true"
end
